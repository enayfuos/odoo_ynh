{
    "name": "Odoo",
    "id": "odoo",
    "packaging_format": 1,
    "description": {
        "en": "Odoo application.",
        "fr": "Odoo pour YunoHost."
    },
    "license": "free",
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
		"type": "domain",
                "ask": {
                    "en": "Choose a domain name for Odoo",
                    "fr": "Choisissez un nom de domaine pour Odoo"
                },
                "example": "odoo.example.com"
            },
            {
                "name": "admin",
		"type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "admin_password",
                "type": "password",
                "ask": {
                    "en": "admin password",
                    "fr": "Mot de passe admin"
                }
            },
            {
                "name": "database_password",
                "type": "password",
                "ask": {
                    "en": "db password",
                    "fr": "Mot de passe de la db"
                }
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "database_language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr_FR", "en_EN"],
                "default": "fr_FR"
            }
        ]
    }
}
