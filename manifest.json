{
    "name": "odoo",
    "id": "odoo",
    "packaging_format": 1,
    "description": {
        "en": "Odoo en",
        "fr": "Odoo fr"
    },
    "url": "https://odoo.com",
    "license": "free",
    "maintainer": {
        "name": "enayfuos",
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "postgres",
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
				"type": "domain",
                "ask": {
                    "en": "Choose a domain name for Odoo",
                    "fr": "Choisissez un nom de domaine pour Odoo"
                },
                "example": "odoo.domain.com"
            },
            {
                "name": "admin",
				"type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
			{
                "name": "admin_password",
                "ask": {
                    "en": "Choose an admin password",
                    "fr": "Choisissez le mot de passe de l’administrateur"
                },
            },
			{
                "name": "database_password",
                "ask": {
                    "en": "Choose a DB password",
                    "fr": "Choisissez le mot de passe de la DB"
                },
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "database_language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr_FR", "en_EN"],
                "default": "fr_FR"
            }
        ]
    }
}
